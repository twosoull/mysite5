<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="guest">

	<select id="selectGuestList" resultType="GuestVo">
		<![CDATA[
			select rownum,
  	    		   no,
 	    		   name,
 	   		       content,
 	    		   reg_date as regDate
			from(select no,
    	 		        name,
      			        content,
      	    	        reg_date
   	 			 from guestbook
    	 		 order by no asc) 
			order by rownum desc
	]]>

	</select>
	<insert id="insert" parameterType="GuestVo">
		<![CDATA[
		insert into guestbook
		values(SEQ_GUESTBOOK_NO.nextval,
			   #{name},
	  	       #{password},
		       #{content},
		       sysdate
			   )
		]]>
	</insert>
	<delete id="delete" parameterType="GuestVo">
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password= #{password}
		]]>
	</delete>
	
	<!-- 글저장 -->
	<insert id="insertSelectKey" parameterType="com.javaex.vo.GuestVo">
	

		<selectKey keyProperty="no" resultType="int" order="BEFORE">	
			select seq_guestbook_no.nextval from dual
		</selectKey>
		
		<![CDATA[
		insert into guestbook
		values( #{no},
			    #{name},
	  	        #{password},
		        #{content},
		        sysdate
			    )
		]]>	
	</insert>
	
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.GuestVo">
		<![CDATA[
			select no,
       			   name,
       			   content,
       		       reg_date as regDate
			from guestbook
			where no = #{no}
		]]>
	</select>
	 
</mapper>
